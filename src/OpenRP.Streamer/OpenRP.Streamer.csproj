<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Title>Streamer Wrapper for SampSharp.Entities</Title>
    <Description>A SampSharp wrapper for Incognito's streamer plugin.</Description>
    <PackageIcon>OpenRoleplay.png</PackageIcon>
    <RepositoryUrl>https://github.com/OpenRoleplay/OpenRP.Streamer</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <Authors>Tim Potze, Koert Lichtendonk</Authors>
    <Company>Tim Potze, Koert Lichtendonk</Company>
    <PackageProjectUrl>https://open-roleplay.com/</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\OpenRoleplay.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="SampSharp.Entities" Version="0.10.0" />
  </ItemGroup>

</Project>